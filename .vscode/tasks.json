{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Build Ubuntu",
			"command": "docker",
			"args": [
				"buildx",
				"build",
				"--platform",
				"linux/amd64,linux/arm64,linux/amd64",
				"-t",
				"stm32-builder:ubuntu-test",
				"-f",
				"Dockerfile.ubuntu",
				"--load",
				"."
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": []
		},
